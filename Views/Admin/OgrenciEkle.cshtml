@{
    ViewData["Title"] = "Ogrenci Ekle";
    ViewData["Active"] = "OgrenciEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-xl-5">
        <section class="surface-card p-4">
            <h2 class="surface-title mb-1"><i class="bi bi-person-plus-fill me-2"></i>Yeni Ogrenci</h2>
            <p class="surface-subtitle mb-3">Asagidaki bilgilerle yeni ogrenci hesabi ac.</p>

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger py-2 mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Hata
                </div>
            }

            <form method="post" asp-controller="Admin" asp-action="OgrenciEkle" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Ad Soyad</label>
                    <div class="position-relative">
                        <i class="bi bi-person position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text" name="ad" class="form-control ps-5" required placeholder="ornek: Ayse Kaya" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Kullanici Adi</label>
                    <div class="input-group">
                        <span class="input-group-text">&#64;</span>
                        <input type="text" name="kullaniciAdi" class="form-control" required placeholder="ornek: aysekaya" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Sifre</label>
                    <div class="position-relative">
                        <i class="bi bi-lock position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="password" name="sifre" class="form-control ps-5" required placeholder="guclu sifre belirle" minlength="4" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Profil Fotografi (istege bagli)</label>
                    <input type="file" name="profilFotograf" class="form-control" accept=".jpg,.jpeg,.png,.webp,image/*" />
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-person-plus-fill me-1"></i> Ogrenci Ekle
                </button>
            </form>
        </section>

        <div class="text-center mt-3">
            <a href="/Admin/Ogrenciler" class="surface-subtitle">
                <i class="bi bi-arrow-left me-1"></i> Ogrenci listesine don
            </a>
        </div>
    </div>
</div>
