@model List<PuanOdulSistemi.Models.PuanBasvurusu>
@{
    ViewData["Title"] = "Onay Bekleyenler";
    ViewData["Active"] = "OnayBekleyenler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!Model.Any())
{
    <div class="card p-5 text-center text-muted">
        <div style="font-size: 3rem;">✅</div>
        <h5 class="mt-3">Bekleyen onay yok!</h5>
        <p>Tüm başvurular işlenmiş.</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var b in Model)
        {
            <div class="col-12">
                <div class="card p-4">
                    <div class="row align-items-start g-3">
                        @if (!string.IsNullOrEmpty(b.FotografYolu))
                        {
                            <div class="col-auto">
                                <a href="@b.FotografYolu" target="_blank">
                                    <img src="@b.FotografYolu" alt="kanıt" class="rounded"
                                         style="width: 120px; height: 120px; object-fit: cover;" />
                                </a>
                                <div class="text-center small text-muted mt-1">Kanıt</div>
                            </div>
                        }
                        <div class="col">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="fw-bold mb-1">@b.AktiviteAdi</h5>
                                    <p class="text-muted mb-1">
                                        <i class="bi bi-person me-1"></i>
                                        <strong>@b.Kullanici?.Ad</strong>
                                        <span class="text-muted">(@b.Kullanici?.KullaniciAdi)</span>
                                    </p>
                                    @if (!string.IsNullOrEmpty(b.Aciklama))
                                    {
                                        <p class="text-muted mb-1">@b.Aciklama</p>
                                    }
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@b.GondermeTarihi.ToString("dd MMMM yyyy HH:mm")
                                    </small>
                                </div>
                                <div class="text-end">
                                    <span class="display-6 fw-bold text-primary">@b.Puan</span>
                                    <div class="text-muted small">puan</div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <div class="row g-2">
                                    <div class="col-12 col-md-6">
                                        <form method="post" asp-controller="Admin" asp-action="Onayla" class="d-flex gap-2">
                                            <input type="hidden" name="id" value="@b.Id" />
                                            <input type="text" name="adminNotu" class="form-control form-control-sm"
                                                   placeholder="Admin notu (isteğe bağlı)..." />
                                            <button type="submit" class="btn btn-success btn-sm px-3 fw-semibold text-nowrap">
                                                <i class="bi bi-check-lg me-1"></i>Onayla
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <form method="post" asp-controller="Admin" asp-action="Reddet" class="d-flex gap-2">
                                            <input type="hidden" name="id" value="@b.Id" />
                                            <input type="text" name="adminNotu" class="form-control form-control-sm"
                                                   placeholder="Red nedeni..." />
                                            <button type="submit" class="btn btn-danger btn-sm px-3 fw-semibold text-nowrap">
                                                <i class="bi bi-x-lg me-1"></i>Reddet
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
