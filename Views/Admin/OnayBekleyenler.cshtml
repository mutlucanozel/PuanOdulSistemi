@model List<PuanOdulSistemi.Models.PuanBasvurusu>
@{
    ViewData["Title"] = "Onay Bekleyenler";
    ViewData["Active"] = "OnayBekleyenler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!Model.Any())
{
    <section class="surface-card empty-state">
        <div class="empty-icon"><i class="bi bi-check2-all"></i></div>
        <h4>Bekleyen onay yok</h4>
        <p>Tum basvurular islenmis durumda.</p>
    </section>
}
else
{
    <div class="page-head">
        <p><strong>@Model.Count</strong> basvuru admin onayi bekliyor.</p>
    </div>

    <div class="item-list">
        @foreach (var b in Model)
        {
            <article class="request-card">
                <div class="request-top">
                    <div class="d-flex gap-3 flex-grow-1">
                        @if (!string.IsNullOrEmpty(b.FotografYolu))
                        {
                            <div class="request-proof">
                                <a href="@b.FotografYolu" target="_blank" rel="noopener noreferrer">
                                    <img src="@b.FotografYolu" alt="Kanit fotografi" />
                                </a>
                            </div>
                        }

                        <div class="flex-grow-1">
                            <h3 class="request-title">@b.AktiviteAdi</h3>
                            <div class="request-user">
                                <span class="avatar">@(b.Kullanici?.Ad?.Length > 0 ? b.Kullanici.Ad[0].ToString().ToUpper() : "?")</span>
                                <div>
                                    <strong>@b.Kullanici?.Ad</strong>
                                    <span class="text-muted small">(@b.Kullanici?.KullaniciAdi)</span>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(b.Aciklama))
                            {
                                <p class="request-desc">@b.Aciklama</p>
                            }
                            <div class="request-meta">
                                <i class="bi bi-clock me-1"></i> @b.GondermeTarihi.ToString("dd MMMM yyyy, HH:mm")
                            </div>
                        </div>
                    </div>

                    <div class="request-points">
                        <strong>@b.Puan</strong>
                        <span>puan</span>
                    </div>
                </div>

                <div class="request-actions">
                    <div class="row g-2">
                        <div class="col-12 col-lg-6">
                            <form method="post" asp-controller="Admin" asp-action="Onayla" class="d-flex gap-2">
                                <input type="hidden" name="id" value="@b.Id" />
                                <input type="text" name="adminNotu" class="form-control form-control-sm" placeholder="Admin notu (istege bagli)" />
                                <button type="submit" class="btn btn-success btn-sm fw-semibold text-nowrap">
                                    <i class="bi bi-check-lg me-1"></i>Onayla
                                </button>
                            </form>
                        </div>
                        <div class="col-12 col-lg-6">
                            <form method="post" asp-controller="Admin" asp-action="Reddet" class="d-flex gap-2">
                                <input type="hidden" name="id" value="@b.Id" />
                                <input type="text" name="adminNotu" class="form-control form-control-sm" placeholder="Red nedeni" />
                                <button type="submit" class="btn btn-danger btn-sm fw-semibold text-nowrap">
                                    <i class="bi bi-x-lg me-1"></i>Reddet
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        }
    </div>
}
