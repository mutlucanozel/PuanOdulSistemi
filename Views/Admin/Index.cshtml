@{
    ViewData["Title"] = "Genel Bakis";
    ViewData["Active"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="metric-grid mb-3">
    <a href="/Admin/OnayBekleyenler" class="metric-card warning">
        <div class="metric-head">
            <span class="metric-icon"><i class="bi bi-hourglass-split"></i></span>
            <span class="status-badge">Bekliyor</span>
        </div>
        <div class="metric-value">@ViewBag.BekleyenSayi</div>
        <div class="metric-label">Onay bekleyen basvuru</div>
    </a>

    <a href="/Admin/Ogrenciler" class="metric-card secondary">
        <div class="metric-head">
            <span class="metric-icon"><i class="bi bi-people-fill"></i></span>
            <span class="status-badge">Aktif</span>
        </div>
        <div class="metric-value">@ViewBag.OgrenciSayisi</div>
        <div class="metric-label">Kayitli ogrenci</div>
    </a>

    <div class="metric-card success">
        <div class="metric-head">
            <span class="metric-icon"><i class="bi bi-check2-circle"></i></span>
            <span class="status-badge">Toplam</span>
        </div>
        <div class="metric-value">@ViewBag.ToplamBasvuru</div>
        <div class="metric-label">Tum basvurular</div>
    </div>

    <a href="/Admin/OdulleriYonet" class="metric-card primary">
        <div class="metric-head">
            <span class="metric-icon"><i class="bi bi-gift-fill"></i></span>
            <span class="status-badge">Tanimli</span>
        </div>
        <div class="metric-value">@ViewBag.OdulSayisi</div>
        <div class="metric-label">Odul sayisi</div>
    </a>
</div>

<div class="section-grid">
    <section class="surface-card p-3">
        <h2 class="surface-title mb-1">Hizli Islemler</h2>
        <p class="surface-subtitle mb-3">Panelde en sik kullandigin islemler.</p>

        <div class="action-list">
            <a href="/Admin/OnayBekleyenler" class="action-btn">
                <span><i class="bi bi-hourglass-split me-2"></i>Bekleyen onaylari incele</span>
                @if (ViewBag.BekleyenSayi > 0)
                {
                    <span class="status-badge warning">@ViewBag.BekleyenSayi</span>
                }
            </a>
            <a href="/Admin/OgrenciEkle" class="action-btn">
                <span><i class="bi bi-person-plus-fill me-2"></i>Yeni ogrenci ekle</span>
                <i class="bi bi-arrow-right-short"></i>
            </a>
            <a href="/Admin/OdulleriYonet" class="action-btn">
                <span><i class="bi bi-gift-fill me-2"></i>Odulleri duzenle</span>
                <i class="bi bi-arrow-right-short"></i>
            </a>
        </div>
    </section>

    <section class="surface-card p-3">
        <h2 class="surface-title mb-1">Sistem Durumu</h2>
        <p class="surface-subtitle mb-3">Temel servislerin anlik ozeti.</p>

        <div class="status-list">
            <div class="status-item">
                <strong><i class="bi bi-circle-fill me-2 text-success"></i>Sistem</strong>
                <span class="status-badge success">Aktif</span>
            </div>
            <div class="status-item">
                <strong><i class="bi bi-database-fill me-2 text-info"></i>Veritabani</strong>
                <span class="status-badge info">SQLite</span>
            </div>
            <div class="status-item">
                <strong><i class="bi bi-shield-check me-2 text-primary"></i>Sifreleme</strong>
                <span class="status-badge neutral">BCrypt</span>
            </div>
            <div class="status-item">
                <strong><i class="bi bi-mortarboard-fill me-2 text-warning"></i>Okul Verisi</strong>
                <span class="status-badge warning">7 Lise</span>
            </div>
        </div>
    </section>
</div>
