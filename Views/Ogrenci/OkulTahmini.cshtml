@{
    ViewData["Title"] = "Okul Tahmini";
    ViewData["Active"] = "OkulTahmini";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";

    double ortalama = ViewBag.Ortalama ?? 0;
    var okullar = ViewBag.Okullar as List<PuanOdulSistemi.Models.OkulBilgisi> ?? new();
}

<section class="hero-surface mb-3">
    <div class="row align-items-center">
        <div class="col-md">
            <h2 class="text-white mb-1">Okul Tahmini</h2>
            <p>Onaylanan puan ortalamana gore ulasabilecegin liseleri goruntule.</p>
        </div>
        <div class="col-md-auto hero-stat">
            <span class="d-block opacity-75 small">Ortalama Puanin</span>
            <strong>@(ortalama > 0 ? ortalama.ToString("F2") : "-")</strong>
        </div>
    </div>
</section>

@if (ortalama == 0)
{
    <div class="alert alert-warning mb-3">
        <i class="bi bi-info-circle-fill me-1"></i>
        Okul tahmini olusmasi icin once puan basvurusu yapip onay alinmasi gerekir.
    </div>
}

<section class="surface-card p-3">
    <h3 class="surface-title mb-2">Eskisehir Lise Taban Puanlari</h3>

    <div class="table-shell">
        <div class="table-responsive">
            <table class="table table-modern school-table align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Okul Adi</th>
                        <th class="text-end">Taban Puan</th>
                        <th class="text-center">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < okullar.Count; i++)
                    {
                        var okul = okullar[i];
                        bool girebilir = ortalama > 0 && ortalama >= okul.TabanPuan;
                        <tr class="@(girebilir ? "reachable" : "")">
                            <td>@(i + 1)</td>
                            <td class="fw-semibold">@okul.Ad</td>
                            <td class="text-end fw-semibold">@okul.TabanPuan.ToString("F2")</td>
                            <td class="text-center">
                                @if (girebilir)
                                {
                                    <span class="status-badge success"><i class="bi bi-check-lg"></i> Girebilirsin</span>
                                }
                                else if (ortalama > 0)
                                {
                                    double fark = okul.TabanPuan - ortalama;
                                    <span class="status-badge neutral">@fark.ToString("F2") puan eksik</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (ortalama > 0)
    {
        var enIyiOkul = okullar.Where(o => ortalama >= o.TabanPuan).FirstOrDefault();
        if (enIyiOkul != null)
        {
            <div class="alert alert-success mt-3 mb-0">
                <i class="bi bi-mortarboard-fill me-1"></i>
                Tebrikler, @ortalama.ToString("F2") ortalamayla <strong>@enIyiOkul.Ad</strong> icin uygunsun.
            </div>
        }
    }
</section>
