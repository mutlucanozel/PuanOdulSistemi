@model List<PuanOdulSistemi.Models.PuanBasvurusu>
@{
    ViewData["Title"] = "Puanlarim";
    ViewData["Active"] = "Puanlarim";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}

<section class="surface-card p-3">
    <div class="page-head mb-2">
        <p>Tum basvurularini buradan takip edebilirsin.</p>
        <a href="/Ogrenci/PuanGir" class="btn btn-primary btn-sm">
            <i class="bi bi-plus me-1"></i> Yeni Basvuru
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state py-4">
            <div class="empty-icon"><i class="bi bi-journal-plus"></i></div>
            <h5>Henuz basvuru yok</h5>
            <p>Ilk aktiviteni girip puan yolculugunu baslat.</p>
            <a href="/Ogrenci/PuanGir" class="btn btn-primary">Ilk Puani Gir</a>
        </div>
    }
    else
    {
        <div class="item-list">
            @foreach (var b in Model)
            {
                <article class="log-card">
                    <div class="log-row">
                        @if (!string.IsNullOrEmpty(b.FotografYolu))
                        {
                            <a class="proof-thumb" href="@b.FotografYolu" target="_blank" rel="noopener noreferrer">
                                <img src="@b.FotografYolu" alt="Kanit fotografi" />
                            </a>
                        }

                        <div class="log-text">
                            <h6>@b.AktiviteAdi</h6>
                            <div class="mb-1">
                                @if (b.Durum == "Onaylandi")
                                {
                                    <span class="status-badge success"><i class="bi bi-check-lg"></i> Onaylandi</span>
                                }
                                else if (b.Durum == "Bekliyor")
                                {
                                    <span class="status-badge warning"><i class="bi bi-hourglass-split"></i> Bekliyor</span>
                                }
                                else
                                {
                                    <span class="status-badge danger"><i class="bi bi-x-lg"></i> Reddedildi</span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(b.Aciklama))
                            {
                                <p>@b.Aciklama</p>
                            }
                            @if (!string.IsNullOrEmpty(b.AdminNotu))
                            {
                                <p class="mb-1"><i class="bi bi-chat-left-text me-1"></i><strong>Admin Notu:</strong> @b.AdminNotu</p>
                            }

                            <div class="log-meta">
                                <i class="bi bi-clock me-1"></i>@b.GondermeTarihi.ToString("dd MMMM yyyy HH:mm")
                            </div>
                        </div>

                        <div class="log-points">
                            <strong>@b.Puan</strong>
                            <span>puan</span>
                        </div>
                    </div>
                </article>
            }
        </div>
    }
</section>
