@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="info-page-wrap">
    <section class="info-page-card">
        <h1 class="text-danger mb-2">Bir hata olustu</h1>
        <p class="surface-subtitle mb-3">
            Istegin islenirken beklenmeyen bir sorunla karsilasildi.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="mb-3"><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        <div class="alert alert-info mb-0">
            Sorun devam ederse sistem yoneticisi ile request ID bilgisini paylas.
        </div>
    </section>
</div>
