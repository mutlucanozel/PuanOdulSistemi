@{
    ViewData["Title"] = "Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-min-shell">
    <canvas id="loginParticles" class="login-particle-canvas" aria-hidden="true"></canvas>

    <section class="auth-card login-cool-card login-min-card">
        <div class="login-cool-card-edge"></div>

        <div class="auth-tabs login-tabs-pretty">
            <a href="/Hesap/Giris" class="auth-tab active">
                <i class="bi bi-box-arrow-in-right"></i>
                <span>Giris Yap</span>
            </a>
            <a href="/Hesap/KayitOl" class="auth-tab">
                <i class="bi bi-person-plus"></i>
                <span>Kayit Ol</span>
            </a>
        </div>

        <div class="auth-content login-min-content">
            <div class="auth-card-head">
                <span class="auth-mini-kicker"><i class="bi bi-shield-check"></i> Guvenli Alan</span>
                <h2>Hesabina Giris Yap</h2>
                <p>Kullanici bilgilerini girerek devam et.</p>
            </div>

            @if (TempData["Basari"] != null)
            {
                <div class="alert alert-success py-2 mb-3">
                    <i class="bi bi-check-circle-fill me-1"></i> @TempData["Basari"]
                </div>
            }

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger py-2 mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Hata
                </div>
            }

            <form method="post" asp-controller="Hesap" asp-action="Giris">
                <div class="auth-field">
                    <label class="form-label">Kullanici Adi</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-person"></i>
                        <input class="auth-input" type="text" name="kullaniciAdi" placeholder="kullanici adin" required autocomplete="username" />
                    </div>
                </div>

                <div class="auth-field">
                    <label class="form-label">Sifre</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-lock"></i>
                        <input class="auth-input" type="password" name="sifre" placeholder="sifren" required autocomplete="current-password" />
                    </div>
                </div>

                <button type="submit" class="auth-btn login-cool-btn">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Giris Yap
                </button>
            </form>
        </div>
    </section>
</div>

@section Scripts {
<script>
    if (window.initAuthParticles) {
        window.initAuthParticles("loginParticles");
    }
    if (window.initAuthCardFx) {
        window.initAuthCardFx();
    }
</script>
}
