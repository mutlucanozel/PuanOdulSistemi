@{
    ViewData["Title"] = "Kayit Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-shell">
    <aside class="auth-showcase">
        <div class="auth-brand">
            <span class="auth-brand-chip"><i class="bi bi-rocket-takeoff-fill"></i> Hedefe Odakli</span>
            <h1 class="auth-brand-title">Kendi Yolculugunu<br />Simdi Baslat.</h1>
            <p class="auth-brand-text">
                Hesabini olustur, basarilarini puana cevir ve odul yolculuguna hemen katil.
            </p>
        </div>

        <div class="auth-points">
            <div class="auth-point">
                <span class="auth-point-icon"><i class="bi bi-plus-circle"></i></span>
                <div>
                    <h6>Kolay Basvuru</h6>
                    <p>Aktiviteni dakikalar icinde gonder, sureci panelden izle.</p>
                </div>
            </div>
            <div class="auth-point">
                <span class="auth-point-icon"><i class="bi bi-graph-up-arrow"></i></span>
                <div>
                    <h6>Canli Gelisim</h6>
                    <p>Puan, ortalama ve odul durumunu tek bakista guncel gor.</p>
                </div>
            </div>
            <div class="auth-point">
                <span class="auth-point-icon"><i class="bi bi-shield-check"></i></span>
                <div>
                    <h6>Guvenli Hesap</h6>
                    <p>Sifren guvenli sekilde saklanir, hesabin koruma altindadir.</p>
                </div>
            </div>
        </div>

        <div class="auth-footer-note">
            Â© @DateTime.Now.Year Puan Odul Sistemi
        </div>
    </aside>

    <section class="auth-form-area">
        <div class="w-100" style="max-width: 460px;">
            <div class="auth-mobile-brand">
                <h2>Puan Odul Sistemi</h2>
                <p>Kayit ol ve ilerlemeni bugunden olc.</p>
            </div>

            <div class="auth-card">
                <div class="auth-tabs">
                    <a href="/Hesap/Giris" class="auth-tab">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Giris Yap
                    </a>
                    <a href="/Hesap/KayitOl" class="auth-tab active">
                        <i class="bi bi-person-plus me-1"></i> Kayit Ol
                    </a>
                </div>

                <div class="auth-content">
                    <h5 class="auth-title">Yeni hesap olustur</h5>
                    <p class="auth-subtitle">Bilgilerini doldur ve sistemi kullanmaya basla.</p>

                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger py-2 mb-3">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Hata
                        </div>
                    }

                    <form method="post" asp-controller="Hesap" asp-action="KayitOl">
                        <div class="auth-field">
                            <label class="form-label">Ad Soyad</label>
                            <div class="auth-input-wrap">
                                <i class="bi bi-person-badge"></i>
                                <input class="auth-input" type="text" name="ad" placeholder="ornek: Ayse Kaya" required minlength="2" autocomplete="name" />
                            </div>
                        </div>

                        <div class="auth-field">
                            <label class="form-label">Kullanici Adi</label>
                            <div class="auth-input-wrap">
                                <i class="bi bi-at"></i>
                                <input class="auth-input" type="text" name="kullaniciAdi" placeholder="kullanici adin" required minlength="3" autocomplete="username" />
                            </div>
                        </div>

                        <div class="auth-field">
                            <label class="form-label">Sifre</label>
                            <div class="auth-input-wrap">
                                <i class="bi bi-lock"></i>
                                <input class="auth-input" type="password" name="sifre" placeholder="en az 6 karakter" required minlength="6" autocomplete="new-password" />
                            </div>
                        </div>

                        <div class="auth-field">
                            <label class="form-label">Sifre Tekrar</label>
                            <div class="auth-input-wrap">
                                <i class="bi bi-lock-fill"></i>
                                <input class="auth-input" type="password" name="sifreTekrar" placeholder="sifreni tekrar gir" required minlength="6" autocomplete="new-password" />
                            </div>
                        </div>

                        <button type="submit" class="auth-btn">
                            <i class="bi bi-person-check me-1"></i> Kayit Ol
                        </button>
                    </form>

                    <div class="auth-note">
                        Zaten hesabin var mi? <a href="/Hesap/Giris">Giris yap</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
