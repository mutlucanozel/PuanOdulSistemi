@{
    ViewData["Title"] = "Kayit Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-min-shell">
    <canvas id="registerParticles" class="login-particle-canvas" aria-hidden="true"></canvas>

    <section class="auth-card login-cool-card login-min-card">
        <div class="login-cool-card-edge"></div>

        <div class="auth-tabs login-tabs-pretty">
            <a href="/Hesap/Giris" class="auth-tab">
                <i class="bi bi-box-arrow-in-right"></i>
                <span>Giris Yap</span>
            </a>
            <a href="/Hesap/KayitOl" class="auth-tab active">
                <i class="bi bi-person-plus"></i>
                <span>Kayit Ol</span>
            </a>
        </div>

        <div class="auth-content login-min-content">
            <div class="auth-card-head">
                <span class="auth-mini-kicker"><i class="bi bi-stars"></i> Yeni Hesap</span>
                <h2>Kayit Ol</h2>
                <p>Bilgilerini gir, hesabini olustur ve sisteme katil.</p>
            </div>

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger py-2 mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Hata
                </div>
            }

            <form method="post" asp-controller="Hesap" asp-action="KayitOl" enctype="multipart/form-data">
                <div class="auth-field">
                    <label class="form-label">Ad Soyad</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-person-badge"></i>
                        <input class="auth-input" type="text" name="ad" placeholder="ornek: Ayse Kaya" required minlength="2" autocomplete="name" />
                    </div>
                </div>

                <div class="auth-field">
                    <label class="form-label">Kullanici Adi</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-at"></i>
                        <input class="auth-input" type="text" name="kullaniciAdi" placeholder="kullanici adin" required minlength="3" autocomplete="username" />
                    </div>
                </div>

                <div class="auth-field">
                    <label class="form-label">Sifre</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-lock"></i>
                        <input class="auth-input" type="password" name="sifre" placeholder="en az 6 karakter" required minlength="6" autocomplete="new-password" />
                    </div>
                </div>

                <div class="auth-field">
                    <label class="form-label">Sifre Tekrar</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-lock-fill"></i>
                        <input class="auth-input" type="password" name="sifreTekrar" placeholder="sifreni tekrar gir" required minlength="6" autocomplete="new-password" />
                    </div>
                </div>

                <div class="auth-field">
                    <label class="form-label">Profil Fotografi (istege bagli)</label>
                    <div class="auth-input-wrap">
                        <i class="bi bi-image"></i>
                        <input class="auth-input" type="file" name="profilFotograf" accept=".jpg,.jpeg,.png,.webp,image/*" />
                    </div>
                </div>

                <button type="submit" class="auth-btn login-cool-btn">
                    <i class="bi bi-person-check me-1"></i> Kayit Ol
                </button>
            </form>
        </div>
    </section>
</div>

@section Scripts {
<script>
    if (window.initAuthParticles) {
        window.initAuthParticles("registerParticles");
    }
    if (window.initAuthCardFx) {
        window.initAuthCardFx();
    }
</script>
}
